@prefix : <http://example.com/owl/families/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Mary
  a :Woman .

:Woman
  rdfs:subClassOf :Person .

:Mother
  rdfs:subClassOf :Woman .

:Person
  owl:equivalentClass :Human .

[]  a owl:AllDisjointClasses ;
    owl:members (:Woman :Man) .

:John
  :hasWife :Mary ;
  :hasAge 51 .

:Mother
  owl:equivalentClass [a owl:Class ;
                       owl:intersectionOf (:Woman :Parent)] .

:Parent
  owl:equivalentClass [a owl:Class ;
                       owl:unionOf (:Mother :Father)] ;
  owl:equivalentClass [a owl:Restriction ;
                       owl:onProperty :hasChild ;
                       owl:someValuesFrom :Person] .

:ChildlessPerson
  owl:equivalentClass [a owl:Class ;
                       owl:intersectionOf (:Person [owl:complementOf :Parent])] .

:Grandfather
  rdfs:subClassOf [a owl:Class ;
                   owl:intersectionOf (:Man :Parent)] .

:HappyPerson
  owl:equivalentClass [a owl:Restriction ;
                       owl:onProperty :hasChild ;
                       owl:allValuesFrom :HappyPerson] ;
  owl:equivalentClass [a owl:Class ;
                       owl:intersectionOf ([a owl:Restriction ;
                                            owl:onProperty :hasChild ;
                                            owl:allValuesFrom :HappyPerson])] .

:JohnsChildren
  owl:equivalentClass [a owl:Restriction ;
                       owl:onProperty :hasParent ;
                       owl:hasValue :John] .

:John
  a [a owl:Restriction ;
            owl:maxQualifiedCardinality "4"^^xsd:nonNegativeInteger ;
            owl:onProperty :hasChild ;
            owl:onClass :Parent] ;
  a [a owl:Restriction ;
            owl:minQualifiedCardinality "2"^^xsd:nonNegativeInteger ;
            owl:onProperty :hasChild ;
            owl:onClass :Parent] ;
  a [a owl:Restriction ;
            owl:qualifiedCardinality "3"^^xsd:nonNegativeInteger ;
            owl:onProperty :hasChild ;
            owl:onClass :Parent] ;
  a [a owl:Restriction ;
            owl:cardinality "5"^^xsd:nonNegativeInteger ;
            owl:onProperty :hasChild] .

:hasParent
  owl:inverseOf :hasChild ;
  owl:propertyDisjointWith :hasSpouse .

:hasSpouse
  a owl:SymmetricProperty .

:hasChild
  a owl:AsymmetricProperty .

:hasRelative
  a owl:ReflexiveProperty .

:parentOf
  a owl:IrreflexiveProperty .

:hasHusband
  a owl:FunctionalProperty .

:hasGrandparent
  owl:propertyChainAxiom (:hasParent :hasParent) .

:hasWife
  rdfs:subPropertyOf :hasSpouse ;
  rdfs:domain :Man ;
  rdfs:range :Woman .

:hasAge
  rdfs:domain :Person ;
  rdfs:range xsd:NonNegativeInteger ;
  a owl:FunctionalProperty ;
  a owl:DatatypeProperty .

:personAge
  owl:equivalentClass [a :hasAge ;
                       a rdfs:Datatype ;
                       owl:onDatatype xsd:integer ;
                       owl:withRestrictions ([owl:minInclusive 0] [owl:maxInclusive 150])] .

:toddlerAge
  owl:equivalentClass [a rdfs:Datatype ;
                       owl:oneOf ("1"^^xsd:integer "2"^^xsd:integer)] .

:hasWife
  a owl:ObjectProperty .

:atTeenager
  a owl:DataRange ;
  owl:onDataRange xsd:integer ;
  owl:minInclusive 13 ;
  owl:maxInclusive 19 .

:Teenager
  owl:intersectionOf (:Person
                      [a owl:Restriction ;
                       owl:onProperty :hasAge ;
                       owl:someValuesFrom :atTeenager]) .
#:Teenager
#  owl:intersectionOf (:Person
#                      [a owl:Restriction ;
#                       owl:onProperty :hasAge ;
#                       owl:someValuesFrom [a owl:DataRange ;
#                                           owl:onDataRange xsd:integer ;
#                                           owl:minInclusive 13 ;
#                                           owl:maxInclusive 19]]) .

:Person
  rdfs:comment "Represents the set of all people."^^xsd:string ;
  a owl:Class .

:Man
  rdfs:subClassOf :Person .

:John
  a owl:NamedIndividual ;
  a :Father ;
  :hasChild :Susan .

:Father
  a :SocialRole ;
  rdfs:subClassOf [a owl:Class ;
                   owl:intersectionOf (:Man :Parent)] .

:Parent
  owl:equivalentClass [a owl:Restriction ;
                       owl:onProperty :hasChild ;
                       owl:someValuesFrom :Person] .

:hasFather
  rdfs:subPropertyOf :hasParent .

:Susan
  a owl:NamedIndividual ;
  a :HappyPerson ;
  :hasAge 15 .
